<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project basedir="." default="build" name="SWTRipper">
		
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    
    <path id="SWTRipper.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/args4j-2.0.12.jar"/>
        <pathelement location="lib/swt.jar"/>
        <pathelement location="lib/log4j-1.2.15.jar"/>
        <pathelement location="lib/GUITARModel-Core.jar"/>
        <pathelement location="lib/GUIRipper-Core.jar"/>
        
        <!-- swtmodel.jar is currently copied from the ripper job by Jenkins at runtime -->
        <!-- TODO when we do a release, make sure we include swtmodel.jar in lib directly so that it can build without Jenkins -->
        <pathelement location="lib/swtmodel.jar"/>
    </path>
    
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
        
	<target name="build" depends="init">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="SWTRipper.classpath"/>
        </javac>
    </target>
	
    <target name="dist" depends="build" description="Build a JAR of this project">
		<mkdir dir="dist"/>
		<jar destfile="dist/swtripper.jar">
			<fileset dir="bin"/>
		</jar>
	</target>
	
	<target name="clean">
        <delete dir="bin"/>
        <delete dir="dist"/>
        <!-- remove swtmodel.jar so Jenkins can add a potentially newer version -->
        <!-- TODO remove this when we release -->
        <delete file="lib/swtmodel.jar"/>
    </target>
            
</project>